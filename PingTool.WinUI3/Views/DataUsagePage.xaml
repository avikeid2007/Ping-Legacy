<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="PingTool.Views.DataUsagePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <StackPanel Padding="24,16" Spacing="20">
            <!-- Header -->
            <StackPanel Orientation="Horizontal" Spacing="12">
                <Border
                    Width="44"
                    Height="44"
                    CornerRadius="10"
                    Background="{StaticResource AccentGradientBrush}">
                    <FontIcon
                        FontFamily="{StaticResource SymbolThemeFontFamily}"
                        Glyph="&#xE9D9;"
                        FontSize="20"
                        Foreground="White"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center" />
                </Border>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock
                        Text="Network Statistics"
                        FontSize="24"
                        FontWeight="Bold" />
                    <TextBlock
                        Text="Monitor your network usage and connection details"
                        FontSize="12"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                </StackPanel>
                <Button
                    Margin="24,0,0,0"
                    VerticalAlignment="Center"
                    Click="Refresh_Click"
                    ToolTipService.ToolTip="Refresh data">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <FontIcon
                            FontFamily="{StaticResource SymbolThemeFontFamily}"
                            Glyph="&#xE72C;"
                            FontSize="14" />
                        <TextBlock Text="Refresh" />
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- Connection Info Card -->
            <Border Style="{StaticResource ModernCardStyle}">
                <StackPanel Spacing="16">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon
                            FontFamily="{StaticResource SymbolThemeFontFamily}"
                            Glyph="&#xE839;"
                            FontSize="16"
                            Foreground="{StaticResource PrimaryAccentBrush}" />
                        <TextBlock
                            Text="Active Connection"
                            FontWeight="SemiBold"
                            FontSize="16" />
                    </StackPanel>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <TextBlock
                                Text="Network Name"
                                FontSize="12"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            <TextBlock
                                x:Name="NetworkName"
                                Text="--"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Margin="0,4,0,0" />
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock
                                Text="Connection Type"
                                FontSize="12"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            <TextBlock
                                x:Name="ConnectionType"
                                Text="--"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Margin="0,4,0,0" />
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock
                                Text="Signal Strength"
                                FontSize="12"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            <StackPanel Orientation="Horizontal" Spacing="6" Margin="0,4,0,0">
                                <FontIcon
                                    x:Name="SignalIcon"
                                    FontFamily="{StaticResource SymbolThemeFontFamily}"
                                    Glyph="&#xE871;"
                                    FontSize="16"
                                    Foreground="#10B981" />
                                <TextBlock
                                    x:Name="SignalStrength"
                                    Text="--"
                                    FontSize="16"
                                    FontWeight="SemiBold" />
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Grid.Column="3">
                            <TextBlock
                                Text="Cost Type"
                                FontSize="12"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            <TextBlock
                                x:Name="CostType"
                                Text="--"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Margin="0,4,0,0" />
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Today's Usage -->
            <TextBlock
                Text="Today's Usage"
                FontWeight="SemiBold"
                FontSize="18" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Download -->
                <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,12,0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Border
                                Width="36"
                                Height="36"
                                CornerRadius="8"
                                Background="{StaticResource SuccessGradientBrush}">
                                <FontIcon
                                    FontFamily="{StaticResource SymbolThemeFontFamily}"
                                    Glyph="&#xE896;"
                                    FontSize="16"
                                    Foreground="White"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center" />
                            </Border>
                            <TextBlock
                                Text="Downloaded"
                                VerticalAlignment="Center"
                                FontWeight="SemiBold" />
                        </StackPanel>
                        <TextBlock
                            x:Name="TodayDownload"
                            Text="0 MB"
                            FontSize="32"
                            FontWeight="Bold"
                            Margin="0,12,0,0" />
                        <TextBlock
                            Text="Data received today"
                            FontSize="12"
                            Foreground="{ThemeResource TextFillColorTertiaryBrush}" />
                    </StackPanel>
                </Border>

                <!-- Upload -->
                <Border Grid.Column="1" Style="{StaticResource ModernCardStyle}" Margin="0,0,12,0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Border
                                Width="36"
                                Height="36"
                                CornerRadius="8"
                                Background="{StaticResource InfoGradientBrush}">
                                <FontIcon
                                    FontFamily="{StaticResource SymbolThemeFontFamily}"
                                    Glyph="&#xE898;"
                                    FontSize="16"
                                    Foreground="White"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center" />
                            </Border>
                            <TextBlock
                                Text="Uploaded"
                                VerticalAlignment="Center"
                                FontWeight="SemiBold" />
                        </StackPanel>
                        <TextBlock
                            x:Name="TodayUpload"
                            Text="0 MB"
                            FontSize="32"
                            FontWeight="Bold"
                            Margin="0,12,0,0" />
                        <TextBlock
                            Text="Data sent today"
                            FontSize="12"
                            Foreground="{ThemeResource TextFillColorTertiaryBrush}" />
                    </StackPanel>
                </Border>

                <!-- Total -->
                <Border Grid.Column="2" Style="{StaticResource ModernCardStyle}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Border
                                Width="36"
                                Height="36"
                                CornerRadius="8"
                                Background="{StaticResource AccentGradientBrush}">
                                <FontIcon
                                    FontFamily="{StaticResource SymbolThemeFontFamily}"
                                    Glyph="&#xE9D9;"
                                    FontSize="16"
                                    Foreground="White"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center" />
                            </Border>
                            <TextBlock
                                Text="Total"
                                VerticalAlignment="Center"
                                FontWeight="SemiBold" />
                        </StackPanel>
                        <TextBlock
                            x:Name="TodayTotal"
                            Text="0 MB"
                            FontSize="32"
                            FontWeight="Bold"
                            Margin="0,12,0,0" />
                        <TextBlock
                            Text="Total data today"
                            FontSize="12"
                            Foreground="{ThemeResource TextFillColorTertiaryBrush}" />
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Last 30 Days Usage -->
            <TextBlock
                Text="Last 30 Days"
                FontWeight="SemiBold"
                FontSize="18" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Download -->
                <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,12,0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Border
                                Width="36"
                                Height="36"
                                CornerRadius="8"
                                Background="#22059669">
                                <FontIcon
                                    FontFamily="{StaticResource SymbolThemeFontFamily}"
                                    Glyph="&#xE896;"
                                    FontSize="16"
                                    Foreground="#059669"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center" />
                            </Border>
                            <TextBlock
                                Text="Downloaded"
                                VerticalAlignment="Center"
                                FontWeight="SemiBold" />
                        </StackPanel>
                        <TextBlock
                            x:Name="MonthDownload"
                            Text="0 GB"
                            FontSize="28"
                            FontWeight="Bold"
                            Margin="0,12,0,0" />
                        <TextBlock
                            Text="Past 30 days"
                            FontSize="12"
                            Foreground="{ThemeResource TextFillColorTertiaryBrush}" />
                    </StackPanel>
                </Border>

                <!-- Upload -->
                <Border Grid.Column="1" Style="{StaticResource ModernCardStyle}" Margin="0,0,12,0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Border
                                Width="36"
                                Height="36"
                                CornerRadius="8"
                                Background="#220EA5E9">
                                <FontIcon
                                    FontFamily="{StaticResource SymbolThemeFontFamily}"
                                    Glyph="&#xE898;"
                                    FontSize="16"
                                    Foreground="#0EA5E9"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center" />
                            </Border>
                            <TextBlock
                                Text="Uploaded"
                                VerticalAlignment="Center"
                                FontWeight="SemiBold" />
                        </StackPanel>
                        <TextBlock
                            x:Name="MonthUpload"
                            Text="0 GB"
                            FontSize="28"
                            FontWeight="Bold"
                            Margin="0,12,0,0" />
                        <TextBlock
                            Text="Past 30 days"
                            FontSize="12"
                            Foreground="{ThemeResource TextFillColorTertiaryBrush}" />
                    </StackPanel>
                </Border>

                <!-- Total -->
                <Border Grid.Column="2" Style="{StaticResource ModernCardStyle}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Border
                                Width="36"
                                Height="36"
                                CornerRadius="8"
                                Background="#227C3AED">
                                <FontIcon
                                    FontFamily="{StaticResource SymbolThemeFontFamily}"
                                    Glyph="&#xE9D9;"
                                    FontSize="16"
                                    Foreground="#7C3AED"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center" />
                            </Border>
                            <TextBlock
                                Text="Total"
                                VerticalAlignment="Center"
                                FontWeight="SemiBold" />
                        </StackPanel>
                        <TextBlock
                            x:Name="MonthTotal"
                            Text="0 GB"
                            FontSize="28"
                            FontWeight="Bold"
                            Margin="0,12,0,0" />
                        <TextBlock
                            Text="Past 30 days"
                            FontSize="12"
                            Foreground="{ThemeResource TextFillColorTertiaryBrush}" />
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Daily Average -->
            <Border Style="{StaticResource ModernCardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock
                            Text="Daily Average"
                            FontSize="12"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                        <TextBlock
                            x:Name="DailyAverage"
                            Text="-- MB/day"
                            FontSize="20"
                            FontWeight="Bold"
                            Margin="0,4,0,0" />
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock
                            Text="Peak Usage Day"
                            FontSize="12"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                        <TextBlock
                            x:Name="PeakDay"
                            Text="--"
                            FontSize="20"
                            FontWeight="Bold"
                            Margin="0,4,0,0" />
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock
                            Text="Last Updated"
                            FontSize="12"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                        <TextBlock
                            x:Name="LastUpdated"
                            Text="--"
                            FontSize="20"
                            FontWeight="Bold"
                            Margin="0,4,0,0" />
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Network Interface Details -->
            <TextBlock
                Text="Network Interface"
                FontWeight="SemiBold"
                FontSize="18" />
            <Border Style="{StaticResource ModernCardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Row 1 -->
                    <StackPanel Padding="0,0,16,16">
                        <TextBlock
                            Text="Interface Name"
                            FontSize="12"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                        <TextBlock
                            x:Name="InterfaceName"
                            Text="--"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Margin="0,4,0,0"
                            TextWrapping="Wrap" />
                    </StackPanel>

                    <StackPanel Grid.Column="1" Padding="16,0,0,16">
                        <TextBlock
                            Text="Connection Speed"
                            FontSize="12"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                        <TextBlock
                            x:Name="ConnectionSpeed"
                            Text="--"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Margin="0,4,0,0" />
                    </StackPanel>

                    <!-- Row 2 -->
                    <StackPanel Grid.Row="1" Padding="0,0,16,16">
                        <TextBlock
                            Text="IPv4 Address"
                            FontSize="12"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                        <TextBlock
                            x:Name="IPv4Address"
                            Text="--"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Margin="0,4,0,0" />
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="1" Padding="16,0,0,16">
                        <TextBlock
                            Text="IPv6 Address"
                            FontSize="12"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                        <TextBlock
                            x:Name="IPv6Address"
                            Text="--"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Margin="0,4,0,0"
                            TextWrapping="Wrap" />
                    </StackPanel>

                    <!-- Row 3 -->
                    <StackPanel Grid.Row="2" Padding="0,0,16,0">
                        <TextBlock
                            Text="MAC Address"
                            FontSize="12"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                        <TextBlock
                            x:Name="MacAddress"
                            Text="--"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Margin="0,4,0,0" />
                    </StackPanel>

                    <StackPanel Grid.Row="2" Grid.Column="1" Padding="16,0,0,0">
                        <TextBlock
                            Text="DNS Servers"
                            FontSize="12"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                        <TextBlock
                            x:Name="DnsServers"
                            Text="--"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Margin="0,4,0,0"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Additional Statistics -->
            <TextBlock
                Text="Additional Statistics"
                FontWeight="SemiBold"
                FontSize="18" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Current Session -->
                <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,12,0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Border
                                Width="36"
                                Height="36"
                                CornerRadius="8"
                                Background="#22F59E0B">
                                <FontIcon
                                    FontFamily="{StaticResource SymbolThemeFontFamily}"
                                    Glyph="&#xE916;"
                                    FontSize="16"
                                    Foreground="#F59E0B"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center" />
                            </Border>
                            <TextBlock
                                Text="Current Session"
                                VerticalAlignment="Center"
                                FontWeight="SemiBold" />
                        </StackPanel>
                        <TextBlock
                            x:Name="SessionData"
                            Text="0 MB"
                            FontSize="24"
                            FontWeight="Bold"
                            Margin="0,12,0,0" />
                        <TextBlock
                            Text="Since connection started"
                            FontSize="12"
                            Foreground="{ThemeResource TextFillColorTertiaryBrush}" />
                    </StackPanel>
                </Border>

                <!-- Roaming Data -->
                <Border Grid.Column="1" Style="{StaticResource ModernCardStyle}" Margin="0,0,12,0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Border
                                Width="36"
                                Height="36"
                                CornerRadius="8"
                                Background="#22EF4444">
                                <FontIcon
                                    FontFamily="{StaticResource SymbolThemeFontFamily}"
                                    Glyph="&#xE909;"
                                    FontSize="16"
                                    Foreground="#EF4444"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center" />
                            </Border>
                            <TextBlock
                                Text="Roaming Data"
                                VerticalAlignment="Center"
                                FontWeight="SemiBold" />
                        </StackPanel>
                        <TextBlock
                            x:Name="RoamingData"
                            Text="0 MB"
                            FontSize="24"
                            FontWeight="Bold"
                            Margin="0,12,0,0" />
                        <TextBlock
                            Text="Last 30 days"
                            FontSize="12"
                            Foreground="{ThemeResource TextFillColorTertiaryBrush}" />
                    </StackPanel>
                </Border>

                <!-- Average Speed -->
                <Border Grid.Column="2" Style="{StaticResource ModernCardStyle}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Border
                                Width="36"
                                Height="36"
                                CornerRadius="8"
                                Background="#2206B6D4">
                                <FontIcon
                                    FontFamily="{StaticResource SymbolThemeFontFamily}"
                                    Glyph="&#xEC4A;"
                                    FontSize="16"
                                    Foreground="#06B6D4"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center" />
                            </Border>
                            <TextBlock
                                Text="Avg. Speed"
                                VerticalAlignment="Center"
                                FontWeight="SemiBold" />
                        </StackPanel>
                        <TextBlock
                            x:Name="AverageSpeed"
                            Text="-- Mbps"
                            FontSize="24"
                            FontWeight="Bold"
                            Margin="0,12,0,0" />
                        <TextBlock
                            Text="Upload/Download combined"
                            FontSize="12"
                            Foreground="{ThemeResource TextFillColorTertiaryBrush}" />
                    </StackPanel>
                </Border>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</Page>
