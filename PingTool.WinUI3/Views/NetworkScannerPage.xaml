<Page
    x:Class="PingTool.Views.NetworkScannerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <StackPanel Padding="24,16" Spacing="20">
            <!-- Header -->
            <StackPanel Orientation="Horizontal" Spacing="12">
                <Border
                    Width="44"
                    Height="44"
                    CornerRadius="10"
                    Background="{StaticResource AccentGradientBrush}">
                    <FontIcon
                        FontFamily="{StaticResource SymbolThemeFontFamily}"
                        Glyph="&#xE8B5;"
                        FontSize="20"
                        Foreground="White"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center" />
                </Border>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock
                        Text="Network Scanner"
                        FontSize="24"
                        FontWeight="Bold" />
                    <TextBlock
                        Text="Scan IP ranges and discover devices on your network"
                        FontSize="12"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                </StackPanel>
            </StackPanel>

            <!--  Legal Notice  -->
            <InfoBar
                IsClosable="False"
                IsOpen="{x:Bind ViewModel.LegalNoticeAcknowledged, Mode=OneWay, Converter={StaticResource InverseBoolConverter}}"
                Severity="Warning"
                Title="LEGAL AND ETHICAL RESPONSIBILITY">
                <InfoBar.Content>
                    <StackPanel Spacing="8">
                        <TextBlock TextWrapping="Wrap">
                            <Bold>You are legally responsible for ensuring you have proper authorization before scanning any network.</Bold>
                        </TextBlock>
                        <TextBlock TextWrapping="Wrap">
                            Unauthorized network scanning may violate Computer Fraud and Abuse Act (CFAA), Computer Misuse Act, and other laws.
                        </TextBlock>
                        <TextBlock TextWrapping="Wrap">
                            <Bold>ONLY scan networks you own or have explicit written permission to scan.</Bold>
                        </TextBlock>
                        <CheckBox IsChecked="{x:Bind ViewModel.LegalNoticeAcknowledged, Mode=TwoWay}">
                            <TextBlock TextWrapping="Wrap">
                                <Bold>I acknowledge legal responsibility and have authorization to scan the target network.</Bold>
                            </TextBlock>
                        </CheckBox>
                    </StackPanel>
                </InfoBar.Content>
            </InfoBar>

            <!--  Scan Configuration  -->
            <Border Style="{StaticResource ModernCardStyle}">
                <StackPanel Spacing="16">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon
                            FontFamily="{StaticResource SymbolThemeFontFamily}"
                            Glyph="&#xE713;"
                            FontSize="16"
                            Foreground="{StaticResource PrimaryAccentBrush}" />
                        <TextBlock
                            Text="Scan Configuration"
                            FontWeight="SemiBold"
                            FontSize="16" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <RadioButton
                            Checked="ScanTypeRadioButton_Checked"
                            Content="IP Range"
                            GroupName="ScanType"
                            IsChecked="{x:Bind ViewModel.SelectedScanType, Mode=OneWay, Converter={StaticResource EqualsConverter}, ConverterParameter=Range}"
                            Tag="Range" />
                        <RadioButton
                            Checked="ScanTypeRadioButton_Checked"
                            Content="Subnet (CIDR)"
                            GroupName="ScanType"
                            IsChecked="{x:Bind ViewModel.SelectedScanType, Mode=OneWay, Converter={StaticResource EqualsConverter}, ConverterParameter=Subnet}"
                            Tag="Subnet" />
                        <RadioButton Margin="32 0 0 0"
                            Checked="ScanTypeRadioButton_Checked"
                            Content="Local Network"
                            GroupName="ScanType"
                            IsChecked="{x:Bind ViewModel.SelectedScanType, Mode=OneWay, Converter={StaticResource EqualsConverter}, ConverterParameter=Local}"
                            Tag="Local" />
                    </StackPanel>

                    <Grid Visibility="{x:Bind ViewModel.SelectedScanType, Mode=OneWay, Converter={StaticResource EqualsToVisibilityConverter}, ConverterParameter=Range}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBox
                            Margin="0,0,4,0"
                            Header="Start IP"
                            PlaceholderText="192.168.1.1"
                            Text="{x:Bind ViewModel.StartIp, Mode=TwoWay}" />
                        <TextBox
                            Grid.Column="1"
                            Margin="4,0,0,0"
                            Header="End IP"
                            PlaceholderText="192.168.1.254"
                            Text="{x:Bind ViewModel.EndIp, Mode=TwoWay}" />
                    </Grid>

                    <TextBox
                        Header="Subnet (CIDR)"
                        PlaceholderText="192.168.1.0/24"
                        Text="{x:Bind ViewModel.Subnet, Mode=TwoWay}"
                        Visibility="{x:Bind ViewModel.SelectedScanType, Mode=OneWay, Converter={StaticResource EqualsToVisibilityConverter}, ConverterParameter=Subnet}" />

                    <!--  Advanced Options  -->
                    <Expander
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Stretch"
                        Background="{ThemeResource SubtleFillColorSecondaryBrush}"
                        CornerRadius="4">
                        <Expander.Header>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon
                                    FontFamily="{StaticResource SymbolThemeFontFamily}"
                                    FontSize="14"
                                    Glyph="&#xE713;" />
                                <TextBlock
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Text="Advanced Options (Rate Limiting)" />
                            </StackPanel>
                        </Expander.Header>
                        <StackPanel Margin="0,12,0,0" Spacing="12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Margin="0,0,8,0" Spacing="4">
                                    <TextBlock
                                        FontSize="12"
                                        FontWeight="SemiBold"
                                        Text="Timeout (ms)" />
                                    <NumberBox
                                        Maximum="5000"
                                        Minimum="100"
                                        SpinButtonPlacementMode="Inline"
                                        Value="{x:Bind ViewModel.TimeoutMs, Mode=TwoWay}" />
                                    <TextBlock
                                        FontSize="10"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                        Text="Wait time per ping (100-5000ms)" />
                                </StackPanel>
                                <StackPanel Grid.Column="1" Spacing="4">
                                    <TextBlock
                                        FontSize="12"
                                        FontWeight="SemiBold"
                                        Text="Concurrent Scans" />
                                    <NumberBox
                                        Maximum="100"
                                        Minimum="1"
                                        SpinButtonPlacementMode="Inline"
                                        Value="{x:Bind ViewModel.MaxConcurrentScans, Mode=TwoWay}" />
                                    <TextBlock
                                        FontSize="10"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                        Text="Max simultaneous pings (1-100)" />
                                </StackPanel>
                            </Grid>
                            <CheckBox
                                IsChecked="{x:Bind ViewModel.ResolveHostnames, Mode=TwoWay}">
                                <StackPanel>
                                    <TextBlock FontWeight="SemiBold" Text="Resolve Hostnames" />
                                    <TextBlock
                                        FontSize="10"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                        Text="Performs DNS lookup (slower but shows device names)"
                                        TextWrapping="Wrap" />
                                </StackPanel>
                            </CheckBox>
                            <Border
                                Padding="8"
                                Background="{ThemeResource SubtleFillColorTertiaryBrush}"
                                CornerRadius="4">
                                <TextBlock
                                    FontSize="11"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    TextWrapping="Wrap">
                                    <Run FontWeight="SemiBold" Text="ðŸ’¡ Tip:" />
                                    <Run Text="Lower concurrent scans = gentler on network. Higher timeout = more reliable detection of slow hosts." />
                                </TextBlock>
                            </Border>
                        </StackPanel>
                    </Expander>

                    <Button
                        Padding="16,10"
                        Click="StartScanButton_Click"
                        IsEnabled="{x:Bind ViewModel.LegalNoticeAcknowledged, Mode=OneWay}"
                        Style="{StaticResource AccentButtonStyle}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <SymbolIcon Symbol="{x:Bind GetScanSymbol(ViewModel.IsScanning), Mode=OneWay}" />
                            <TextBlock Text="{x:Bind GetScanText(ViewModel.IsScanning), Mode=OneWay}" />
                        </StackPanel>
                    </Button>

                    <ProgressBar
                        Maximum="100"
                        Value="{x:Bind ViewModel.Progress, Mode=OneWay}"
                        Visibility="{x:Bind ViewModel.IsScanning, Mode=OneWay}" />
                    <TextBlock
                        FontSize="12"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Text="{x:Bind ViewModel.StatusText, Mode=OneWay}" />
                </StackPanel>
            </Border>

            <!--  Results  -->
            <Border Style="{StaticResource ModernCardStyle}">
                <StackPanel Spacing="16">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon
                            FontFamily="{StaticResource SymbolThemeFontFamily}"
                            Glyph="&#xE8B5;"
                            FontSize="16"
                            Foreground="{StaticResource PrimaryAccentBrush}" />
                        <TextBlock
                            Text="Scan Results"
                            FontWeight="SemiBold"
                            FontSize="16" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Border
                            Padding="16,12"
                            Background="{StaticResource SuccessGradientBrush}"
                            CornerRadius="8">
                            <StackPanel>
                                <TextBlock
                                    FontSize="28"
                                    FontWeight="Bold"
                                    Foreground="White"
                                    Text="{x:Bind ViewModel.OnlineCount, Mode=OneWay}" />
                                <TextBlock
                                    FontSize="12"
                                    Foreground="White"
                                    Text="Online" />
                            </StackPanel>
                        </Border>
                        <Border
                            Padding="16,12"
                            Background="{ThemeResource SubtleFillColorSecondaryBrush}"
                            CornerRadius="8">
                            <StackPanel>
                                <TextBlock
                                    FontSize="28"
                                    FontWeight="Bold"
                                    Text="{x:Bind ViewModel.OfflineCount, Mode=OneWay}" />
                                <TextBlock
                                    FontSize="12"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Text="Offline" />
                            </StackPanel>
                        </Border>
                        <Border
                            Padding="16,12"
                            Background="{StaticResource AccentGradientBrush}"
                            CornerRadius="8">
                            <StackPanel>
                                <TextBlock
                                    FontSize="28"
                                    FontWeight="Bold"
                                    Foreground="White"
                                    Text="{x:Bind ViewModel.TotalScanned, Mode=OneWay}" />
                                <TextBlock
                                    FontSize="12"
                                    Foreground="White"
                                    Text="Total" />
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <ListView
                        MaxHeight="400"
                        ItemsSource="{x:Bind ViewModel.ScanResults, Mode=OneWay}">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="local:NetworkScanResult" xmlns:local="using:PingTool.Models">
                                <StackPanel Padding="8" Orientation="Horizontal">
                                    <Ellipse
                                        Width="10"
                                        Height="10"
                                        Margin="0,0,12,0"
                                        Fill="{x:Bind IsOnline, Converter={StaticResource OnlineStatusConverter}}" />
                                    <TextBlock
                                        Width="120"
                                        FontFamily="Consolas"
                                        Text="{x:Bind IpAddress}" />
                                    <TextBlock
                                        Width="60"
                                        Text="{x:Bind ResponseTime}" />
                                    <TextBlock Text="{x:Bind Hostname}" />
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <StackPanel
                        HorizontalAlignment="Center"
                        Visibility="{x:Bind GetEmptyVisibility(ViewModel.ScanResults.Count), Mode=OneWay}">
                        <TextBlock
                            FontSize="16"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            Text="No results yet. Configure and start a scan." />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button Command="{x:Bind ViewModel.ClearResultsCommand}" Content="Clear" />
                        <Button Command="{x:Bind ViewModel.ExportResultsCommand}" Content="Export" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
